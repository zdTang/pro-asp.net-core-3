@model Product
@{
    Layout = "_Layout";
    //ViewData["Title"] = "Mike is learning";
    ViewBag.Title = ViewBag.Title ?? "Product Table";
}

@section Header{
    Production Information
}

 <tr><th>Name</th><td>@Model.Name</td></tr>
<tr><th>Price</th><td>@Model.Price.ToString("c")</td></tr>
<tr><th>Category ID</th><td>@Model.CategoryId</td></tr>

@section Footer{
    (@(((Model.Price / ViewBag.AveragePrice) * 100).ToString("F2"))% of average)
}

